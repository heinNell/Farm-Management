{
  "name": "stock_items",
  "type": "object",
  "required": [
    "item_name",
    "category",
    "quantity",
    "unit",
    "location",
    "status",
    "creator",
    "createdAt",
    "updatedAt"
  ],
  "properties": {
    "item_name": {
      "bsonType": "string",
      "description": "Stock item name"
    },
    "category": {
      "bsonType": "string",
      "enum": [
        "raw_materials",
        "finished_goods",
        "spare_parts",
        "consumables",
        "tools"
      ],
      "description": "Stock category"
    },
    "quantity": {
      "bsonType": "number",
      "minimum": 0,
      "description": "Current quantity"
    },
    "unit": {
      "bsonType": "string",
      "enum": [
        "pieces",
        "kg",
        "liters",
        "boxes",
        "pallets",
        "meters"
      ],
      "description": "Unit of measurement"
    },
    "location": {
      "bsonType": "string",
      "description": "Storage location"
    },
    "status": {
      "bsonType": "string",
      "enum": [
        "available",
        "reserved",
        "low_stock",
        "out_of_stock"
      ],
      "description": "Stock status"
    },
    "reorder_point": {
      "bsonType": "number",
      "minimum": 0,
      "description": "Reorder threshold"
    },
    "reorder_quantity": {
      "bsonType": "number",
      "minimum": 0,
      "description": "Quantity to reorder"
    },
    "unit_price": {
      "bsonType": "number",
      "minimum": 0,
      "description": "Price per unit"
    },
    "supplier": {
      "bsonType": "string",
      "description": "Supplier name"
    },
    "last_restocked": {
      "bsonType": "string",
      "title": "datetime",
      "description": "Last restock date"
    },
    "expiry_date": {
      "bsonType": "string",
      "title": "datetime",
      "description": "Expiration date if applicable"
    },
    "creator": {
      "bsonType": "string",
      "description": "User who created this record"
    },
    "createdAt": {
      "bsonType": "string",
      "title": "datetime",
      "description": "Creation timestamp"
    },
    "updatedAt": {
      "bsonType": "string",
      "title": "datetime",
      "description": "Last update timestamp"
    }
  }
}