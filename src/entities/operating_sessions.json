
{
  "name": "operating_sessions",
  "options": {
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": ["asset_id", "start_time", "end_time", "operating_hours", "task_type", "operator", "created_at"],
        "properties": {
          "asset_id": {
            "bsonType": "string",
            "description": "Reference to assets collection"
          },
          "start_time": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Session start time"
          },
          "end_time": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Session end time"
          },
          "operating_hours": {
            "bsonType": "number",
            "minimum": 0,
            "description": "Total operating hours"
          },
          "task_type": {
            "bsonType": "string",
            "enum": ["plowing", "harvesting", "transport", "maintenance", "other"],
            "description": "Type of task performed"
          },
          "operator": {
            "bsonType": "string",
            "description": "Operator name"
          },
          "fuel_consumed": {
            "bsonType": "number",
            "minimum": 0,
            "description": "Fuel consumed during session (liters)"
          },
          "location": {
            "bsonType": "string",
            "description": "Work location"
          },
          "efficiency_rating": {
            "bsonType": "int",
            "minimum": 1,
            "maximum": 5,
            "description": "Operator efficiency rating"
          },
          "notes": {
            "bsonType": "string",
            "description": "Session notes"
          },
          "created_at": {
            "bsonType": "string",
            "title": "datetime",
            "description": "Record creation timestamp"
          }
        },
        "additionalProperties": true
      }
    },
    "validationLevel": "moderate",
    "validationAction": "warn"
  }
}
